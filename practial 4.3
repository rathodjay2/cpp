
#include <iostream>
using namespace std;

double areaOfCircle(float radius, double pi = 3.14159) {
    return pi * radius * radius;
}

int main() {
    float radius;
    cout << "Enter the radius of the circle: ";
    cin >> radius;

    double area = areaOfCircle(radius);
    cout << "The area of the circle is: " << area << endl;

    return 0;
}
