#include <iostream>
using namespace std;

class StudentInfo
{
private:
    char name[50];
    double spi;

public:
    void setStudentInfo();
    void getStudentInfo();
    double getSPI()
    {
        return spi;
    }
};

void StudentInfo::setStudentInfo()
{
    cout << "Enter the Student Name: ";
    cin >> name;
    cout << "Enter SPI: ";
    cin >> spi;
}

void StudentInfo::getStudentInfo()
{
    cout  << " it is higgest spi = "<< name <<"  "<< spi << " spi" << endl;
}

int main()
{
    StudentInfo std[100];
    int j;
    int idx;
    double max;
    cout << "Enter no of Students: ";
    cin >> j;
    for (int i = 0; i < j; i++)
    {
        std[i].setStudentInfo();
    }
    max = std[0].getSPI();
    idx = 0;
    
    for (int i = 0; i < j; i++)
    {
        if (std[i].getSPI() > max)
        {
            max = std[i].getSPI();
            idx = i;
        }
    }

    std[idx].getStudentInfo();

    return 0;
}
